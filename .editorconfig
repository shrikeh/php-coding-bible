# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
# Change these settings to your own preference
indent_style = space
indent_size = 4

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{feature,js,json,yaml,yml}]
indent_size = 2

[*.{md,yaml,yml}]
trim_trailing_whitespace = false

[phpunit.xml{,.dist}]
indent_size = 4

[{Makefile,**.mk,*.sh}]
indent_style = tab

[*.vcl]
indent_size = 2

[.gitmodules]
indent_style = tab
indent_size = 4

[.php_cs{,.dist}]
indent_style = space
indent_size = 4

[.travis.yml]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = tab
